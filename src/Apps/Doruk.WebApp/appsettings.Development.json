{
  "Urls": "https://localhost:5054",
  "IdentityOptions": {
    "Password": {
      "RequireDigit": false,
      "RequireLowercase": false,
      "RequireUppercase": false,
      "RequireNonAlphanumeric": false,
      "RequiredUniqueChars": 1,
      "RequiredLength": 2
    }
  },
  "CookiePolicyOptions": {
    "MinimumSameSitePolicy": "Lax"
  },
  "CookieOptions": {
    "HttpOnly": true,
    "Secure": true
  },
  "Antiforgery": {
    "Cookie": {
      "HttpOnly": true,
      "SecurePolicy": "Always",
      "SameSite": "Lax"
    }
  }
}