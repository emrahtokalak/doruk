{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console debug) - net8.0",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet build (debug) - net8.0",
            "program": "${workspaceFolder}/src/Apps/Doruk.WebApp/bin/Debug/net8.0/Doruk.WebApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Apps/Doruk.WebApp",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Launch (web debug) - net8.0",
            "type": "coreclr",
            "request": "launch",
            "internalConsoleOptions": "openOnSessionStart",
            "preLaunchTask": "dotnet build (debug) - net8.0",
            "program": "${workspaceFolder}/src/Apps/Doruk.WebApp/bin/Debug/net8.0/Doruk.WebApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Apps/Doruk.WebApp",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            }
        },
        {
            "name": ".NET Core Launch (web release) - net8.0",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet build (release) - net8.0",
            "program": "${workspaceFolder}/src/Apps/Doruk.WebApp/bin/Release/net8.0/Doruk.WebApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Apps/Doruk.WebApp",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Production"
            },
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(http?://\\S+)"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}